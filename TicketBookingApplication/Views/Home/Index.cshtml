@model IEnumerable<TicketBookingApplication.BL.Model.CityDTO>

@using (Html.BeginForm("Search","Home", FormMethod.Get))
{
    <select name="departureCityId" title="City">
        <option value="-1">Выберите город отправления</option>
        @foreach (var city in Model)
        {
            <option value="@city.Id">@city.Name</option>
        }
    </select>
    <select name="arrivalCityId" title="City">
        <option value="-1">Выберите город прибытия</option>
        @foreach (var city in Model)
        {
            <option value="@city.Id">@city.Name</option>
        }
    </select>
    <input name="date" type="date" />
    <button type="submit">Поиск</button>
}